---
import { Image } from "astro:assets";
import Facebook from "../../assets/facebook.svg";
import Linkedin from "../../assets/linkedin.svg";
import Logo from "../../assets/logo-alt.svg";
import Twitter from "../../assets/twitter.svg";
import ShortForm from "../ui/ShortForm.astro";

const logos = [
  { name: "Facebook", src: Facebook, link: "https://www.facebook.com/bebeigorkevinseri/" },
  { name: "Linkedin", src: Linkedin, link: "https://www.linkedin.com/in/kevin-seri-programmeur?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=android_app" },
  { name: "Twitter", src: Twitter, link: "https://twitter.com" },
];

const links = [
  { name: "Accueil", href: "#about" },
  { name: "Services", href: "#services" },
  { name: "Etablissement", href: "#cases" },
  { name: "Espace élèves", href: "#Testimonials" },
  { name: "Réseaux sociaux", href: "#Home" },
];
---

<section class="sm:px-5">
  <div class="w-full max-w-[1240px] mx-auto">
    <div
      class="px-[15px] bg-dark text-white py-[55px] lg:px-[60px] sm:rounded-t-[45px]"
    >
      <div>
        <div
          class="flex flex-col lg:flex-row gap-7 items-center justify-between"
        >
          <picture>
            <a href="#home">
              <Image src={Logo} alt="Logo for Kreatif Brand" />
            </a>
          </picture>
          <ul class="flex flex-col sm:flex-row gap-5">
            {
              links.map((link) => {
                return (
                  <li class="text-center">
                    <a class="underline" href={link.href}>
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
          <ul class="flex gap-5">
            {
              logos.map((logo) => {
                return (
                  <li>
                    <a href={logo.link} target="_blank">
                      <picture>
                        <Image src={logo.src} alt={logo.name} />
                      </picture>
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </div>

        <div class="flex flex-col lg:flex-row mt-[66px] mb-[51px]">
          <div
            class="flex text-center lg:text-start flex-col w-full lg:w-[30%]"
          >
            <h3 class="mb-5">Contactez nous:</h3>
            <div class="flex flex-col justify-between gap-4">
              <span> Email: kevinenadal.ks@gmail.com </span>
              <span> Téléphone: +225 27 24 577 537  //  +225 01 035 713 91 </span>
              <span class="lg:w-3/4">
                Address: Abidjan, Cote d'Ivoire
              </span>
            </div>
          </div>
          <div class="flex-grow my-10 lg:my-0 lg:ml-12">
            <ShortForm />
          </div>
        </div>
      </div>

      <div class="h-[1px] bg-white mb-5"></div>
      <div
        class="flex flex-col lg:flex-row h-20 justify-center mt-4 text-center md:justify-between md:mt-0"
      >
        <span
          >2024 Agence DIGITALINE- Bouake <a
            />marketing digital</a
          ></span
        >&nbsp
        <span>
          <a
            href="https://www.facebook.com/bebeigorkevinseri/"
            target="_blank"
            class="underline">Credit (Kevin SERI)</a
          ><span> &</span>
          <a
            class="underline"
            href="https://www.linkedin.com/in/kevin-seri-programmeur?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=android_app"
            target="_blank">Digitaline</a
          >
        </span>
      </div>
    </div>
  </div>
</section>
